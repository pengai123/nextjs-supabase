generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public"]
}

model Profile {
  id                 String  @id @unique @db.Uuid
  email              String  @unique
  role               Role    @default(USER)
  phone_country_code String?
  phone_number       String?
  full_name          String?

  @@map("profiles")
  @@schema("public")
}

enum Role {
  USER
  ADMIN

  @@schema("public")
}
